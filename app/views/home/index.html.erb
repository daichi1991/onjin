<p>サウンド一覧</p>


<% if @sounds != nil %>
  <% @sounds.each do |sound| %>
      <%= sound.title %>
      <% sound.tag_list.each do |tag|%>
        <span class="label label-primary"><%= tag %></span>
      <% end %><br>
      <%= audio_tag("/uploads/sound/sound_file/#{sound.id}/#{sound.sound_file.identifier}", id: 'player', :controls => true) %>
      <%= link_to "ダウンロード", download_sound_path(sound) %><br>
  <% end %>
<% end %>
