<h2>Sign up</h2>

  <table>
    <tbody>
      <tr>
        <td>姓（公開されません）:</td>
        <td><%= @creator.last_name %></td>
      </tr>
      <tr>
        <td>名（公開されません）:</td>
        <td><%= @creator.first_name %></td>
      </tr>
      <tr>
        <td>姓カナ（公開されません）:</td>
        <td><%= @creator.last_name_kana %></td>
      </tr>
      <tr>
        <td>名カナ（公開されません）:</td>
        <td><%= @creator.first_name_kana %></td>
      </tr>
      <tr>
        <td>生年月日（公開されません）:</td>
        <td><%= @creator.birthday %></td>
      </tr>
      <tr>
        <td>電話番号（公開されません）:</td>
        <td><%= @creator.phone_number %></td>
      </tr>
      <tr>
        <td>郵便番号:</td>
        <td><%= @creator.postcode %></td>
      </tr>
      <tr>
        <td>都道府県:</td>
        <td><%= @creator.prefecture_name %></td>
      </tr>
      <tr>
        <td>市区町村:</td>
        <td><%= @creator.address_city %></td>
      </tr>
      <tr>
        <td>町名:</td>
        <td><%= @creator.address_street %></td>
      </tr>
      <tr>
        <td>建物名:</td>
        <td><%= @creator.address_building %></td>
      </tr>

    </tbody>
  </table>

<%= form_with(url: new_creator_path, local: true) do |f| %>

  <%= f.hidden_field :last_name, :value => @creator.last_name%>
  <%= f.hidden_field :first_name, :value => @creator.first_name %>
  <%= f.hidden_field :last_name_kana, :value => @creator.last_name_kana %>
  <%= f.hidden_field :first_name_kana, :value => @creator.first_name_kana %>
  <%= f.hidden_field :birthday, :value => @creator.birthday %>
  <%= f.hidden_field :phone_number, :value => @creator.phone_number %>
  <%= f.hidden_field :postcode, :value => @creator.postcode %>
  <%= f.hidden_field :prefecture_code, :value => @creator.prefecture_code %>
  <%= f.hidden_field :address_city, :value => @creator.address_city %>
  <%= f.hidden_field :address_street, :value => @creator.address_street%>
  <%= f.hidden_field :address_building, :value => @creator.address_building%>
  <%= f.hidden_field :user_id, :value => @creator.user_id %>

    <%= f.submit "入力に戻る" %>

<% end %>

